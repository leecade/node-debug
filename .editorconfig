# EditorConfig is awesome: http://EditorConfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,html}]
indent_style = space
indent_size = 2

[*.{css}]
indent_style = space
indent_size = 4
